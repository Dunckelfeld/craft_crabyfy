{% extends "_layouts/cp" %}

{% set title = "CraByFy – Craft Gatsby Netlify Deployment"|t %}

{# TODO: list of chronological status updates #}

{% set content %}
  <section>
    <a href="/admin/settings/plugins/cra-by-fy">Settings</a>
  </section>
  <hr/>
  <section>
    <h1>Live</h1>
    {% if deployLiveTriggerUrl|length %}
      <h2>Deploy</h2>
      <p>Wenn auf der Preview Seite alles passt, können die Änderungen hier live geschaltet werden</p>
      <p><a href="{{deployLiveTriggerUrl}}" target="_blank" class="btn btnlivedeploy" id="crabify-deploy-live">Deploy Live</a></p>
    {% endif %}
    {% if liveUrl|length %}
      <a href="{{liveUrl}}" target="_blank" >Zur Live Seite</a>
    {% endif %}
    {# <h2>Status Updates</h2>
